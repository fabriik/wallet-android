<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FabriikTheme.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/FabriikTheme.Dialog.Alert.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/FabriikTheme.Dialog.Alert.Body</item>
        <item name="buttonBarPositiveButtonStyle">@style/FabriikTheme.Dialog.Alert.PositiveButton</item>
    </style>

    <style name="FabriikTheme.Dialog.Alert.Title" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/fabriik_black</item>
        <item name="android:textAppearance">@style/FabriikTheme.Dialog.Alert.Title.Appearance</item>
    </style>

    <style name="FabriikTheme.Dialog.Alert.Title.Appearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/mobile_font_medium</item>
    </style>

    <style name="FabriikTheme.Dialog.Alert.Body" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">#8A000000</item>
        <item name="android:textAppearance">@style/FabriikTheme.Dialog.Alert.Body.Appearance</item>
    </style>

    <style name="FabriikTheme.Dialog.Alert.Body.Appearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/mobile_font</item>
    </style>

    <style name="FabriikTheme.Dialog.Alert.PositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/fabriik_blue_700</item>
    </style>

    <style name="FabriikButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/light_contrast_02</item>
        <item name="android:textAppearance">@style/TextStyle.Button</item>
        <item name="rippleColor">@color/light_interaction_primary_pressed</item>
        <item name="backgroundTint">@color/bg_button_tint</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="FabriikTextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/light_link_01</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextStyle.Button</item>
    </style>

    <style name="FabriikTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:foreground">@drawable/bg_input_view</item>
        <item name="android:textColorHint">@color/til_hint_expanded_tint</item>
        <item name="hintTextColor">@color/til_hint_collapsed_tint</item>
        <item name="hintTextAppearance">@style/TextStyle.Caption</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCollapsedPaddingTop">6dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="materialThemeOverlay">@style/FabriikTextInputStyle.ThemeOverlay</item>
    </style>

    <style name="FabriikTextInputStyle.ThemeOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="editTextStyle">@style/FabriikEditTextStyle</item>
    </style>

    <style name="FabriikEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textAppearance">@style/TextStyle.Body2</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="FabriikErrorBubbleView" parent="TextStyle.Body2">
        <item name="android:background">@drawable/bg_error_bubble</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>