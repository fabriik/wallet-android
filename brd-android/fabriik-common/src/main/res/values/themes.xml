<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Fabriik" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:textColor">@color/light_text_01</item>
        <item name="textInputStyle">@style/FabriikTextInputStyle</item>
        <item name="radioButtonStyle">@style/FabriikRadioButtonStyle</item>
        <item name="materialButtonStyle">@style/FabriikButtonStyle</item>
        <item name="materialCardViewStyle">@style/FabriikCardViewStyle</item>
    </style>

    <style name="FabriikButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/light_contrast_02</item>
        <item name="android:textAppearance">@style/TextStyle.Button</item>
        <item name="backgroundTint">@color/bg_button_tint</item>
        <item name="cornerRadius">12dp</item>
        <item name="rippleColor">@null</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="FabriikButtonStyle.Dense">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textAppearance">@style/TextStyle.Subtitle2</item>
    </style>

    <style name="FabriikButtonStyle.AddDocument" parent="">
        <item name="android:textAppearance">@style/TextStyle.Button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/light_text_01</item>
        <item name="cornerRadius">12dp</item>
        <item name="rippleColor">@null</item>
        <item name="iconGravity">textTop</item>
        <item name="iconPadding">16dp</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="FabriikRadioButtonStyle" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/FabriikRadioButton.ThemeOverlay</item>
        <item name="android:textColor">@color/light_text_01</item>
        <item name="android:textAppearance">@style/TextStyle.Caption</item>
    </style>

    <style name="FabriikRadioButton.ThemeOverlay" parent="">
        <item name="colorOnSurface">@color/light_icons_01</item>
        <item name="colorSecondary">@color/light_interaction_primary_focused</item>
    </style>

    <style name="FabriikCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="contentPadding">16dp</item>
        <item name="cardCornerRadius">@dimen/radius_l</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">36dp</item>
    </style>

    <style name="FabriikTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:foreground">@drawable/bg_input_view</item>
        <item name="android:textColorHint">@color/til_hint_expanded_tint</item>
        <item name="hintTextColor">@color/til_hint_collapsed_tint</item>
        <item name="hintTextAppearance">@style/TextStyle.Caption</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCollapsedPaddingTop">6dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="materialThemeOverlay">@style/FabriikTextInputStyle.ThemeOverlay</item>
    </style>

    <style name="FabriikTextInputStyle.ThemeOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="editTextStyle">@style/FabriikEditTextStyle</item>
    </style>

    <style name="FabriikEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textAppearance">@style/TextStyle.Body2</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">22dp</item>
    </style>
</resources>