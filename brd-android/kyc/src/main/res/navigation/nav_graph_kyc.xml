<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_kyc"
    app:startDestination="@id/fragmentAccountVerification">

    <fragment
        android:id="@+id/fragmentAccountVerification"
        android:name="com.fabriik.kyc.ui.features.accountverification.AccountVerificationFragment"
        tools:layout="@layout/fragment_account_verification">

        <action
            android:id="@+id/action_to_personal_info"
            app:destination="@id/fragmentPersonalInformation" />

        <action
            android:id="@+id/action_to_proof_of_identity"
            app:destination="@id/fragmentProofOfIdentity" />

    </fragment>

    <fragment
        android:id="@+id/fragmentPersonalInformation"
        android:name="com.fabriik.kyc.ui.features.personalinformation.PersonalInformationFragment"
        tools:layout="@layout/fragment_personal_information">

        <action
            android:id="@+id/action_to_exposed_person"
            app:destination="@id/fragmentExposedPerson" />

        <action
            android:id="@+id/action_to_account_verification"
            app:destination="@id/fragmentAccountVerification"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_graph_kyc"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/fragmentCountrySelection"
        android:name="com.fabriik.kyc.ui.features.countryselection.CountrySelectionFragment"
        tools:layout="@layout/fragment_country_selection">

        <argument
            android:name="requestKey"
            app:argType="string" />

        <argument
            android:name="selectedCountry"
            android:defaultValue="@null"
            app:argType="com.fabriik.kyc.data.model.Country"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/fragmentExposedPerson"
        android:name="com.fabriik.kyc.ui.features.exposedperson.ExposedPersonFragment"
        tools:layout="@layout/fragment_exposed_person">

    </fragment>

    <fragment
        android:id="@+id/fragmentProofOfIdentity"
        android:name="com.fabriik.kyc.ui.features.proofofidentity.ProofOfIdentityFragment"
        tools:layout="@layout/fragment_proof_of_identity">

        <action
            android:id="@+id/action_to_proof_of_identity_upload"
            app:destination="@id/fragmentUploadProofOfIdentity" />

    </fragment>

    <fragment
        android:id="@+id/fragmentUploadProofOfIdentity"
        android:name="com.fabriik.kyc.ui.features.proofofidentityupload.UploadProofOfIdentityFragment"
        tools:layout="@layout/fragment_upload_proof_of_identity">

        <argument
            android:name="documentType"
            app:argType="com.fabriik.kyc.data.enums.DocumentType" />

        <action
            android:id="@+id/action_to_address"
            app:destination="@id/fragmentAddressInformation" />

        <action
            android:id="@+id/action_open_photo_source_picker"
            app:destination="@id/bottomSheetPhotoSourcePicker" />

    </fragment>

    <fragment
        android:id="@+id/fragmentAddressInformation"
        android:name="com.fabriik.kyc.ui.features.addressinformation.AddressInformationFragment"
        tools:layout="@layout/fragment_address_information">

        <action
            android:id="@+id/action_to_proof_of_residence"
            app:destination="@id/fragmentProofOfResidence" />

    </fragment>

    <fragment
        android:id="@+id/fragmentProofOfResidence"
        android:name="com.fabriik.kyc.ui.features.proofofresidence.ProofOfResidenceFragment"
        tools:layout="@layout/fragment_proof_of_residence">

        <action
            android:id="@+id/action_to_upload_proof"
            app:destination="@id/fragmentUploadProofOfResidence" />

        <action
            android:id="@+id/action_to_completed"
            app:destination="@id/fragmentCompleted" />

    </fragment>

    <fragment
        android:id="@+id/fragmentUploadProofOfResidence"
        android:name="com.fabriik.kyc.ui.features.proofofresidenceupload.UploadProofOfResidenceFragment"
        tools:layout="@layout/fragment_upload_proof_of_residence">

        <action
            android:id="@+id/action_to_completed"
            app:destination="@id/fragmentCompleted" />

        <action
            android:id="@+id/action_open_photo_source_picker"
            app:destination="@id/bottomSheetPhotoSourcePicker" />

    </fragment>

    <fragment
        android:id="@+id/fragmentCompleted"
        android:name="com.fabriik.kyc.ui.features.completed.CompletedFragment"
        tools:layout="@layout/fragment_completed" />

    <dialog
        android:id="@+id/bottomSheetPhotoSourcePicker"
        android:name="com.fabriik.kyc.ui.dialogs.PhotoSourcePickerBottomSheet"
        tools:layout="@layout/bottom_sheet_photo_source_picker">

        <argument
            android:name="requestKey"
            app:argType="string" />

    </dialog>

</navigation>