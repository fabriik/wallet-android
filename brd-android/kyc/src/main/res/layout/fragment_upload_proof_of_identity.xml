<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.fabriik.kyc.ui.customview.KycToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/UploadProofOfIdentity.Title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/tv_description"
                style="@style/TextStyle.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="@string/UploadProofOfIdentity.Description" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">

                <com.fabriik.kyc.ui.customview.AddProofButton
                    android:id="@+id/btn_add_passport"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="@string/UploadProofOfIdentity.AddDocument.Passport"
                    android:visibility="gone"
                    app:iconBottom="@drawable/ic_id_front"
                    app:iconTop="@drawable/ic_add_proof"
                    tools:visibility="visible" />

                <LinearLayout
                    android:id="@+id/layout_id_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="1"
                    tools:visibility="invisible">

                    <com.fabriik.kyc.ui.customview.AddProofButton
                        android:id="@+id/btn_add_id_front"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="0.5"
                        android:text="@string/UploadProofOfIdentity.AddDocument.Front"
                        app:iconBottom="@drawable/ic_id_front"
                        app:iconTop="@drawable/ic_add_proof_small" />

                    <com.fabriik.kyc.ui.customview.AddProofButton
                        android:id="@+id/btn_add_id_back"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_weight="0.5"
                        android:text="@string/UploadProofOfIdentity.AddDocument.Back"
                        app:iconBottom="@drawable/ic_id_back"
                        app:iconTop="@drawable/ic_add_proof_small" />

                </LinearLayout>
            </FrameLayout>

            <TextView
                style="@style/CheckItemView.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/UploadProofOfIdentity.CheckItem1" />

            <TextView
                style="@style/CheckItemView.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/UploadProofOfIdentity.CheckItem2" />

            <TextView
                style="@style/CheckItemView.Light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/UploadProofOfIdentity.CheckItem3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/UploadProofOfIdentity.Confirm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_email" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>