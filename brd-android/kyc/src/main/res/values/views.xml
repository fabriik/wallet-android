<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InfoView" parent="TextStyle.Body2">
        <item name="android:textColor">@color/light_link_01</item>
        <item name="android:drawableStart">@drawable/ic_info_black</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="TagView" parent="TextStyle.Body2">
        <item name="android:textColor">@color/light_inverse_text_01</item>
        <item name="android:background">@drawable/bg_tag_black</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="CheckItemView.Dark" parent="TextStyle.Body2">
        <item name="android:textColor">@color/light_text_02</item>
        <item name="android:drawableStart">@drawable/ic_check_gray</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CheckItemView.Light" parent="TextStyle.Caption">
        <item name="android:textColor">@color/light_text_01</item>
        <item name="android:drawableStart">@drawable/ic_check_light_gray</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardView.Border" parent="">
        <item name="strokeWidth">1.5dp</item>
    </style>

    <style name="CardView.Border.Basic">
        <item name="strokeColor">@color/basic_box_border</item>
    </style>

    <style name="CardView.Border.Unlimited">
        <item name="strokeColor">@color/unlimited_box_border</item>
    </style>

</resources>